<!-- 
params: {
  path: string link to,
  text: string display text
  inverted: boolean for color schema
}
 -->

<a
  class="font-barlow font-bold tracking-wide border py-1 px-4 rounded inline-flex items-center border-1 border-blue-300 <%= inverted ? "bg-blue-300 hover:bg-gray-800 text-gray-800 hover:text-blue-300" : "bg-gray-800 hover:bg-blue-300 text-blue-300 hover:text-gray-800" %> "
  href="<%- path %>"
  ><%- text %></a
>
